@model Boek

@{
    ViewData["Title"] = "Verwijder Boek";
}

<h2>Verwijder Boek</h2>

<h3>Weet u zeker dat u dit boek wilt verwijderen?</h3>
<div>
    <h4>Boek</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Auteur.Naam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Auteur.Naam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsNewRelease)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsNewRelease)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsBestseller)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsBestseller)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BindingType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BindingType)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BoekId" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" />
        <a asp-action="Filters" class="btn btn-secondary">Annuleren</a>
    </form>
</div>
